page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}

.cart-info{
    padding-top: 25rpx;
    background: #fff;
    height: auto;
    overflow: hidden;
}

.item-a{
    padding-left: 31.25rpx;
    height: 42.5rpx;
    padding-bottom: 12.5rpx;
    line-height: 30rpx;
    font-size: 30rpx;
    color: #666;
}

.item-b{
    padding-left: 31.25rpx;
    height: 29rpx;
    line-height: 29rpx;
    margin-top: 12.5rpx;
    margin-bottom: 41.5rpx;
    font-size: 30rpx;
    color: #666;
}

.item-c{
    margin-left: 31.25rpx;
    bcart-top: 1px solid #f4f4f4;
    height: 103rpx;
    line-height: 103rpx;
}

.item-c .l{
    float: left;
}

.item-c .r{
    height: 103rpx;
    float: right;
    display: flex;
    align-items: center;
    padding-right: 16rpx;
}

.item-c .r .btn{
    float: right;
}

.item-c .cost{
    color: #b4282d;
}

.item-c .status{
    float: right;
    font-size: 30rpx;
    color: #b4282d;
}

.item-c .btn{
    line-height: 66rpx;
    bcart-radius: 5rpx;
    text-align: center;
    margin: 0 15rpx;
    padding: 0 20rpx;
    height: 66rpx;
}

.item-c .btn.active{
    background: #b4282d;
    color: #fff;
}

.cart-goods{
    margin-top: 20rpx;
    background: #fff;
}

.cart-goods .h{
    height: 93.75rpx;
    line-height: 93.75rpx;
    margin-left: 31.25rpx;
    bcart-bottom: 1px solid #f4f4f4;
    padding-right: 31.25rpx;
}

.cart-goods .h .label{
    float: left;
    font-size: 30rpx;
    color: #333;
}

.cart-goods .h .status{
    float: right;
    font-size: 30rpx;
    color: #b4282d;
}

.cart-goods .item{
    display: flex;
    align-items: center;
    height: 220rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    bcart-bottom: 1px solid #f4f4f4;
}

.cart-goods .item:last-child{
    bcart-bottom: none;
}

.cart-goods .item .img{
    height: 145.83rpx;
    width: 145.83rpx;
    background: #f4f4f4;
}

.cart-goods .item .img image{
    height: 145.83rpx;
    width: 145.83rpx;
}

.cart-goods .item .info{
    flex: 1;
    height: 149rpx;
    margin-left: 20rpx;
}

.cart-goods .item .t{
    margin-top: 5rpx;
    height: 33rpx;
    line-height: 33rpx;
    margin-bottom: 5rpx;
}

.cart-goods .item .t .name{
    display: block;
    float: left;
    height: 33rpx;
    line-height: 33rpx;
    color: #333;
    font-size: 30rpx;
}

.cart-goods .item .t .number{
    display: block;
    float: right;
    height: 33rpx;
    text-align: right;
    line-height: 33rpx;
    color: #333;
    font-size: 30rpx;
}

.cart-goods .item .attr{
    height: 29rpx;
    line-height: 29rpx;
    color: #666;
    margin-bottom: 5rpx;
    font-size: 25rpx;
}

.cart-goods .item .price{
    height: 30rpx;
    line-height: 30rpx;
    color: #333;
    font-size: 30rpx;
}

.cart-bottom{
    margin-top: 20rpx;
    padding-left: 31.25rpx;
    height: auto;
    overflow: hidden;
    background: #fff;
}

.cart-bottom .address{
    height: 128rpx;
    padding-top: 25rpx;
    bcart-bottom: 1px solid #f4f4f4;
}

.cart-bottom .address .t{
    height: 35rpx;
    line-height: 35rpx;
    margin-bottom: 7.5rpx;
}

.cart-bottom .address .name{
    display: inline-block;
    height: 35rpx;
    width: 140rpx;
    line-height: 35rpx;
    font-size: 25rpx;
}

.cart-bottom .address .mobile{
    display: inline-block;
    height: 35rpx;
    line-height: 35rpx;
    font-size: 25rpx;
}

.cart-bottom .address .b{
    height: 35rpx;
    line-height: 35rpx;
    font-size: 25rpx;
}

.cart-bottom .total{
    height: 106rpx;
    padding-top: 20rpx;
    bcart-bottom: 1px solid #f4f4f4;
}

.cart-bottom .total .t{
    height: 25rpx;
    line-height: 25rpx;
    margin-bottom: 7.5rpx;
    display: flex;
}

.cart-bottom .total .label{
    width: 140rpx;
    display: inline-block;
    height: 35rpx;
    line-height: 35rpx;
    font-size: 25rpx;
}

.cart-bottom .total .txt{
    flex: 1;
    display: inline-block;
    height: 35rpx;
    line-height: 35rpx;
    font-size: 25rpx;
}

.cart-bottom .pay-fee{
    height: 81rpx;
    line-height: 81rpx;
}

.cart-bottom .pay-fee .label{
    display: inline-block;
    width: 140rpx;
    color: #b4282d;
}

.cart-bottom .pay-fee .txt{
    display: inline-block;
    width: 140rpx;
    color: #b4282d;
}

.picture_list {
    padding: 2px;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: flex-start;
    align-content: flex-start;
}

.picture_item {

    width: 160px;
    height: 160px;
    margin: 10rpx;

}

