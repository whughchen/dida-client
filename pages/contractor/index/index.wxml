<!-- 工长端 -->
<view wx:if="{{userInfo.user_type != '2'}}" class="container">
 <view class="container">
  <view class="a-section a-brand">
    <view class="h">
      <text class="txt">选择车型</text>
    </view>
    <view class="b">
      <view  wx:for="{{vehicleTypes}}" wx:key="item.id" data-id="{{index}}" bindtap="choseVehicleType" class="{{index == vehicleTypeId?'vehicle-choosed':'vehicle-unchoosed'}}">
          <view class="wrap">
            <image class="img" style="width: {{imagewidth}}px; height: {{imageheight}}px;"  src="{{item.pic_url}}" mode="widthFix" bindload="imageLoad"></image>
            
            <view class="mt" style="width: {{imagewidth}}px; height: {{imageheight}}px;"  src="{{item.pic_url}}" mode="widthFix" bindload="imageLoad">
              <text class="brand11">{{item.name}}</text>

            </view>
              <text class="text1">{{item.capacity_weight}}吨</text>
              <text class="text1">{{item.length}}*{{item.width}}*{{item.height}}米 </text>
              <text class="text1">{{item.capacity_volumn}}方\n载重长宽高</text>
              <text class="text1">   </text>
              <text class="text2 secondline">长宽高   </text>
              <text class="text2 secondline">体积   </text>

          </view>
        <!-- </navigator> -->
      </view>
    </view>
  </view>
<view>
  <view style='text-align: center; align-items: center;'>
    <text >选择位置</text>
  </view>
  <view class="add-address"> 
    <navigator url="/pages/ucenter/address/address">
      <view class="add-address" bindtap="addressAddOrUpdate" data-address-id="0">输入地址</view>
    </navigator>
  </view>

  <view class="add-address"> 
    <navigator url="/pages/searchLocation/searchLocation">
      <view class="add-address" bindtap="getLocation" data-address-id="0">地图定位</view>   
    </navigator>
  </view>

  <view>
   <text style='margin-left:14px'>地址：{{app.globalData.contractorAddressTxt}}</text>
  </view>
</view>
  
